<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdFragment.AddItemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_margin="15px"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/input_title"
            android:layout_width="match_parent"
            android:layout_margin="15px"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtitle"
            android:layout_margin="15px"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/input_subtitle"
            android:layout_width="match_parent"
            android:layout_margin="15px"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Authors"
            android:layout_margin="15px"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/input_authors"
            android:layout_width="match_parent"
            android:layout_margin="15px"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publishers"
            android:layout_margin="15px"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/input_publishers"
            android:layout_width="match_parent"
            android:layout_margin="15px"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pages"
            android:layout_margin="15px"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/input_pages"
            android:layout_width="match_parent"
            android:layout_margin="15px"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Year"
            android:layout_margin="15px"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/input_year"
            android:layout_width="match_parent"
            android:layout_margin="15px"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:layout_margin="15px"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/input_rating"
            android:layout_width="match_parent"
            android:layout_margin="15px"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_margin="15px"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/input_description"
            android:layout_width="match_parent"
            android:layout_margin="15px"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_margin="15px"
            android:textSize="14dp"/>

            <EditText
                android:id="@+id/input_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15px"
                android:inputType="numberDecimal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Add Book"
            android:layout_margin="30px"
            android:onClick="onAddBtnClick"
            />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>