<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdFragment.ListItemActivity">

    <LinearLayout
        android:id="@+id/item_attrs_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:layout_margin="10px"
        android:orientation="vertical">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_book_black_24dp"
            android:id="@+id/book_item_img"
            />
        <LinearLayout
            android:id="@+id/attributes_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asads"
                android:textSize="14sp"
                android:layout_margin="2dp"/>
            <TextView
                android:id="@+id/book_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asd"
                android:textSize="14sp"
                android:layout_margin="2dp"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/delete_item"
            android:layout_margin="50px"
            android:backgroundTint="@color/colorDanger"
            android:onClick="onDeleteBtnClick"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>